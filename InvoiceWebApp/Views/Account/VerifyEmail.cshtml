@{
    ViewData["Title"] = "Email Verification";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header text-center">
                @if (ViewBag.VerificationStatus == "Success")
                {
                    <h3 class="text-success">✅ Verification Successful!</h3>
                }
                else
                {
                    <h3 class="text-danger">❌ Verification Failed</h3>
                }
            </div>
            <div class="card-body text-center">
                @if (ViewBag.VerificationStatus == "Success")
                {
                    <div class="alert alert-success" role="alert">
                        <p class="lead">@ViewBag.VerificationMessage</p>
                        <hr>
                        <p>Your email has been successfully verified. You can now proceed to log in to your account.</p>
                    </div>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">Go to Login</a>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <p class="lead">@ViewBag.VerificationMessage</p>
                        <hr>
                        <p>There was an issue verifying your email address. Please ensure you clicked the correct link or try registering again.</p>
                    </div>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-secondary btn-lg">Register Again</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-info btn-lg">Go to Login</a>
                }
            </div>
        </div>
    </div>
</div>